{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist/",
    "lib": ["es6"],
    "types": ["node", "jest"]
  },
  "exclude": ["**/*.spec.ts", "dist/**"]
}
